// definimos un esquema
use("ger_store")
db.createCollection('products', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ['name'], // campos obligatorios para el insert
            properties: {
                name:   {bsonType: 'string'},
                sizes:  {bsonType: 'array', minItems: 1, uniqueItems:true ,items: { bsonType: 'string'} }
            }
        }
    }
})

